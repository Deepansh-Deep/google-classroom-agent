# Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME=classroom-assistant
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Database - PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/classroom_assistant
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Vector Database - ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION=classroom_embeddings

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/api/v1/auth/callback

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Token Encryption (for Google tokens at rest)
TOKEN_ENCRYPTION_KEY=your-32-character-encryption-key

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Email (optional - for reminders)
EMAIL_PROVIDER=mock
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@classroom-assistant.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
